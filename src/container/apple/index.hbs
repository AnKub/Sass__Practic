{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page">
  <div class="header">

    {{#with header}}
    <header class="header__content">
      <div class="header__block">
        <img src="/svg/apple.svg" alt="apple" class="header__icon">
        <nav class="header__block">
          {{#each links}}
          <a href="{{url}}" class="header__link">{{text}}</a>
          {{/each}}
        </nav>
      </div>
      <div class="header__block">
        <img src="/svg/search.svg" alt="search" class="header__icon">
        <img src="/svg/profile.svg" alt="profile" class="header__icon">
      </div>
    </header>
    {{/with}}
  </div>
  <section class="header_n">
    {{#with header.ad}}
    <div class="header__cont2">
      <div class="header__block2">
        <a href="{{url}}" class="header__link2">{{title}}</a>
        {{#with link}}
        <a href="{{url}}" class="header__link2">{{text}}</a>
        {{/with}}
      </div>
    </div>
    {{/with}}
  </section>

  {{!-- part with first big bildboard --}}

  {{#with iphone_pro}}
  <section class="product product--iphone-pro product--dark product--top">
    <div class="product__content">
      <h1 class="product__title"> {{title}}</h1>
      <p class="product__description">{{descriptions}}</p>
      <div class="product__action">

        {{#with link}}
        {{#each text}}
        <a href="{{../link}}" class="product__link">{{this}}</a>
        {{/each}}
        {{/with}}

      </div>
    </div>
  </section>
  {{/with}}


</div>
</div>

